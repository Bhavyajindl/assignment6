#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};
int getSize(Node* head) {
    if (!head) return 0;

    int count = 1;
    Node* temp = head->next;

    while (temp != head) {
        count++;
        temp = temp->next;
    }

    return count;
}

int main() {
    Node* n1 = new Node{10, nullptr};
    Node* n2 = new Node{20, nullptr};
    Node* n3 = new Node{30, nullptr};

    n1->next = n2;
    n2->next = n3;
    n3->next = n1;  // makes it circular

    Node* head = n1;

    cout << "Size of Circular Linked List: " << getSize(head);

    return 0;
}

